{
  "groups": [
    {
      "name": "omni-agent.rag.sqlite",
      "type": "top.yumbo.ai.rag.sqlite.SQLiteRAGProperties",
      "sourceType": "top.yumbo.ai.rag.sqlite.SQLiteRAGProperties",
      "description": "SQLite RAG 配置属性"
    }
  ],
  "properties": [
    {
      "name": "omni-agent.rag.type",
      "type": "java.lang.String",
      "description": "RAG 实现类型：file, h2, sqlite, redis, mongodb, elasticsearch",
      "defaultValue": "file"
    },
    {
      "name": "omni-agent.rag.sqlite.database-path",
      "type": "java.lang.String",
      "description": "SQLite 数据库文件路径",
      "defaultValue": "./data/rag.db"
    },
    {
      "name": "omni-agent.rag.sqlite.init-database",
      "type": "java.lang.Boolean",
      "description": "是否在启动时初始化数据库表",
      "defaultValue": true
    },
    {
      "name": "omni-agent.rag.sqlite.rebuild-on-startup",
      "type": "java.lang.Boolean",
      "description": "是否在启动时重建索引",
      "defaultValue": false
    },
    {
      "name": "omni-agent.rag.sqlite.max-results",
      "type": "java.lang.Integer",
      "description": "最大搜索结果数",
      "defaultValue": 100
    },
    {
      "name": "omni-agent.rag.sqlite.default-top-k",
      "type": "java.lang.Integer",
      "description": "默认返回结果数",
      "defaultValue": 10
    },
    {
      "name": "omni-agent.rag.sqlite.min-score",
      "type": "java.lang.Float",
      "description": "最小相似度阈值",
      "defaultValue": 0.0
    },
    {
      "name": "omni-agent.rag.sqlite.enable-fts",
      "type": "java.lang.Boolean",
      "description": "是否启用 FTS5 全文搜索",
      "defaultValue": true
    },
    {
      "name": "omni-agent.rag.sqlite.max-pool-size",
      "type": "java.lang.Integer",
      "description": "连接池最大连接数",
      "defaultValue": 10
    },
    {
      "name": "omni-agent.rag.sqlite.min-idle",
      "type": "java.lang.Integer",
      "description": "连接池最小空闲连接数",
      "defaultValue": 2
    },
    {
      "name": "omni-agent.rag.sqlite.connection-timeout",
      "type": "java.lang.Long",
      "description": "连接超时时间（毫秒）",
      "defaultValue": 30000
    }
  ]
}
